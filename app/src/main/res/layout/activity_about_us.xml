<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".request.ui.AboutUsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textview_about_us_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/view_padding"
            android:text="@string/action_about_us_title"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview_about_us_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/view_padding"
            android:paddingRight="@dimen/view_padding"
            android:text="@string/about_us_description"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/textview_about_us_app_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/view_padding"
            android:paddingTop="10dp"
            android:paddingRight="@dimen/view_padding"
            android:text="@string/about_us_app_description"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/textview_about_us_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingLeft="@dimen/view_padding"
            android:paddingRight="@dimen/view_padding"
            android:text="@string/about_us_heading"
            android:textStyle="italic"
            android:textSize="@dimen/text_size_small" />

    </LinearLayout>
</ScrollView>

