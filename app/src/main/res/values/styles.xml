<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/AppTheme.Button</item>
        <item name="android:editTextStyle">@style/AppTheme.EditText</item>
        <item name="android:spinnerStyle">@style/AppTheme.Spinner</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="alertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="titleTextColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/edit_text</item>
        <item name="android:textColorHint">@color/edit_text_hint</item>
        <item name="android:backgroundTint">@color/edit_text_bg_tint</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:background">@drawable/selector_button</item>
    </style>

    <style name="AppTheme.TextButton" parent="Widget.AppCompat.TextView">
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:background">@drawable/selector_button</item>
    </style>

    <style name="RequestSummaryPrimaryText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="RequestSummaryItemTitleText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="RequestSummaryItemSubTitleText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="RequestActionText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="AppTheme.Spinner" parent="Widget.AppCompat.Spinner" />

    <style name="AppTheme.InputLayout" parent="Widget.Design.TextInputLayout">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textColorHint">@color/edit_text_hint</item>
    </style>

    <style name="LoginEditText" parent="Widget.AppCompat.EditText">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:background">@color/dark_edit_text_bg</item>
        <item name="android:textColor">@color/light_edit_text_color</item>
        <item name="android:textColorHint">@color/light_edit_text_color</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>

</resources>
